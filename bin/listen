#!/usr/bin/env python

import sys

import os

sys.path.append(os.path.dirname(__file__) + '/../')
from alfred_voice.listen import Brain, SphinxEar, Pico2WaveMouth

if __name__ == "__main__":
    ear = SphinxEar()
    mouth = Pico2WaveMouth()
    brain = Brain(ear, mouth, ['Computer'], 5)
    brain.listen()
