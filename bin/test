#!/usr/bin/env bash

tear_down() {
    echo "Ending background processes..."
    trap - EXIT
    jobs -rp | xargs kill -INT
    wait $(jobs -rp) 2>/dev/null
}
trap "tear_down" EXIT

cd `dirname "$0"`/..

echo "Starting web server..."
uwsgi --http-socket 0.0.0.0:5000 -p 4 --manage-script-name --master --no-orphans --mount /=alfred_http.flask.entry_point:app --pyargv "alfred_openapi.extension.OpenApiExtension alfred_rest.extension.RestExtension alfred_rest.tests.RestTestExtension" &
sleep 3

# Aggregate test exit codes.
exit_code=0
trap '(( exit_code |= $? ))' ERR

flake8 --ignore=E501 ./alfred
flake8 --ignore=E501 ./alfred_http
flake8 --ignore=E501 ./alfred_manor
flake8 --ignore=E501 ./alfred_openapi
flake8 --ignore=E501 ./alfred_rest
coverage run -m nose2
coverage report -m

# Stop aggregating test exit codes.
trap - ERR

tear_down
if [ $exit_code -eq 0 ]
then
    echo "SUCCESS: ALL TESTS PASSED."
else
    echo "ERROR: SOME TESTS FAILED."
fi
exit $exit_code
